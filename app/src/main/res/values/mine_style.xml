<?xml version="1.0" encoding="utf-8"?>
<!-- 我的页面样式 -->
<resources>
<!--  积分兑换、我的福利。单个  -->
    <style name="integral_one">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>
<!--  积分兑换、我的福利。数字  -->
    <style name="integral_number">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
    </style>
<!--  积分兑换、我的福利。文字  -->
    <style name="integral_txt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center</item>
    </style>
<!--  我的订单。图标和文字。单个  -->
    <style name="mine_myorderform_one">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>
<!--  我的订单。图标  -->
    <style name="mine_myorderform_img">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>
<!--  我的订单。文字  -->
    <style name="mine_myorderform_txt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>
<!--  每个模块  -->
    <style name="mine_model_every">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">@drawable/shape_10dp_white_corners</item>
    </style>
<!--  每个标题模块（RelativeLayout）  -->
    <style name="mine_title_model">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/border_bottom_gray_1dp</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
    </style>
<!--  每个模块标题  -->
    <style name="mine_model_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
<!--  每个模块标题。右侧字  -->
    <style name="mine_model_title_right_txt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>
<!--  每个模块标题。右侧箭头  -->
    <style name="mine_model_title_right_arrows">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:text">@string/jiantou</item>
    </style>
</resources>